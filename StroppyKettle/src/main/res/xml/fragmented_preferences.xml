<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Simple Prefs">

        <CheckBoxPreference
                android:key="checkbox_preference"
                android:title="CheckBox"
                android:summary="This checkbox is beautiful"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Dialog Based Prefs">

        <EditTextPreference
                android:key="edittext_preference"
                android:title="Edit Text"
                android:summary="This edit text is nice"
                android:dialogTitle="Hello world"/>

        <ListPreference
                android:key="list_preference"
                android:title="ListPrefs"
                android:summary="List prefs to test"
                android:entries="@array/an_array"
                android:entryValues="@array/an_array"
                android:dialogTitle="Dialog title for prefs"/>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Launch prefs">

        <!-- This PreferenceScreen tag sends the user to a completely different
             activity, switching out of the current preferences UI. -->
        <PreferenceScreen
                android:title="pref screen"
                android:summary="pref screen summary of stuff">

            <intent
                    android:action="android.intent.action.VIEW"
                    android:data="http://www.android.com"/>

        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
            android:title="Attributes that do things">

        <CheckBoxPreference
                android:key="parent_checkbox_preference"
                android:title="checkbox thingy"
                android:summary="bloody summart"/>

        <!-- The visual style of a child is defined by this styled theme attribute. -->
        <CheckBoxPreference
                android:key="child_checkbox_preference"
                android:dependency="parent_checkbox_preference"
                android:layout="?android:attr/preferenceLayoutChild"
                android:title="rubbish titlee"
                android:summary="rubish summary"/>

    </PreferenceCategory>

</PreferenceScreen>