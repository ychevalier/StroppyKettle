<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
            android:id="@+id/teaView"
            android:contentDescription="@string/image_desc"
            android:layout_width="@dimen/wheel_size"
            android:layout_height="@dimen/wheel_size"
            android:layout_centerInParent="true"
            android:scaleType="matrix"
            android:src="@drawable/wheel"/>

    <TextView
            android:id="@+id/game_title"
            android:layout_above="@id/teaView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/game_title"
            android:layout_marginLeft="@dimen/huge_margin"
            android:layout_marginRight="@dimen/huge_margin"
            android:textSize="@dimen/big_text"/>

    <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/CustomProgressBar"
            android:layout_width="@dimen/progress_width"
            android:layout_height="@dimen/progress_height"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/huge_margin"/>

</RelativeLayout>