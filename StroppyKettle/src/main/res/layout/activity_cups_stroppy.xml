<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v4.view.ViewPager
            android:id="@+id/cups_selector"
            android:layout_width="match_parent"
            android:layout_height="@dimen/selector_height"
            android:layout_centerInParent="true"
            android:background="@drawable/number_picker"/>

    <TextView
            android:id="@+id/cups_title"
            android:layout_above="@id/cups_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/cups_title"
            android:layout_marginLeft="@dimen/huge_margin"
            android:layout_marginRight="@dimen/huge_margin"
            android:textSize="@dimen/big_big_text"/>

    <ImageView
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_alignTop="@id/cups_selector"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/indicators"
            android:padding="2dp"
            android:src="@drawable/simple_rect"/>

    <ImageView
            android:layout_width="@dimen/square_width"
            android:layout_height="@dimen/square_height"
            android:layout_alignBottom="@id/cups_selector"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/indicators"
            android:padding="2dp"
            android:src="@drawable/simple_rect"/>

    <Button
            android:id="@+id/cups_button"
            style="@style/CustomButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/huge_margin"
            android:text="@string/cups_button"/>

</RelativeLayout>