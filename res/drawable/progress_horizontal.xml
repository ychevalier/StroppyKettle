<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="@dimen/radius_std" />

            <stroke
                android:width="@dimen/stroke_std"
                android:color="@color/stroke_std" />

            <solid android:color="@color/fill_std" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="@dimen/radius_std" />

                <solid android:color="@android:color/transparent" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <stroke
                    android:width="4dp"
                    android:color="@android:color/transparent" />

                <corners android:radius="@dimen/radius_std" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/grad_dark"
                    android:centerY="0.75"
                    android:endColor="@color/grad_light"
                    android:startColor="@color/grad_light" />
            </shape>
        </clip>
    </item>

</layer-list>