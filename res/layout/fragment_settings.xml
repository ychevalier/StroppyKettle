<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/settings_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/settings_frame"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/beginning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/settings_frame_text_margin"
            android:gravity="center"
            android:textSize="@dimen/big_text"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/std_margin"
            android:textSize="@dimen/big_text"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/settings_frame_text_margin"
            android:gravity="center"
            android:textSize="@dimen/big_text"
            android:textIsSelectable="false" />
    </LinearLayout>

</RelativeLayout>