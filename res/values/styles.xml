<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:padding">0dp</item>
    </style>
	
    <style name="CircleButton" parent="@android:style/Widget.Button">
        <item name="android:minWidth">150dp</item>
        <item name="android:minHeight">150dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/big_text</item>
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:padding">0dp</item>
    </style>
    
    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:padding">2dp</item>
    </style>
    
</resources>